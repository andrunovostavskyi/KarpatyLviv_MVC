@using Karpaty.Models
@model Product

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" disabled class="form-control" />
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Price" class="p-0"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Count" class="p-0"></label>
        <input asp-for="Count" class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Discount" class="p-0"></label>
        <input asp-for="Discount" class="form-control" />
    </div>

    <div class="mb-3 row p-1">
        <label asp-for="Description" class="p-0"></label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Delete </button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to List
            </a>
        </div>
    </div>
</form>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}