@using Karpaty.Models
@model Category

<form method="post" asp-action="Edit">
    <!-- Додаємо приховане поле для Id -->
    <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="DisplayNumber" class="p-0"></label>
        <input asp-for="DisplayNumber" class="form-control" />
        <span asp-validation-for="DisplayNumber" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <!-- Кнопка відправляє форму через POST -->
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <!-- Це посилання повертає до списку -->
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                Back to List
            </a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}